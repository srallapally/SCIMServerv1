{
  "$schema": "./scim-attribute-mappings.schema.json",
  "_comment": "SCIM Custom Attribute Mappings - Map PingIDM custom attributes to standard SCIM attributes",
  "_documentation": "https://docs.pingidentity.com/scim-server/custom-mappings",

  "customAttributeMappings": [
    {
      "_comment": "=== Core User Schema: urn:ietf:params:scim:schemas:core:2.0:User ===",
      "_comment2": "These attributes are part of the base SCIM User schema but not in PingIDM OOTB"
    },
    {
      "scimPath": "name.middleName",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString1",
      "type": "string",
      "description": "The middle name(s) of the User",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "title",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString2",
      "type": "string",
      "description": "The user's title, such as Vice President",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "preferredLanguage",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "preferredLocale",
      "type": "string",
      "description": "Indicates the User's preferred written or spoken language. Format: BCP 47 (e.g., 'en-US')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "preferredLocale",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString3",
      "type": "string",
      "description": "Used to indicate the User's default location for purposes of localizing items such as currency and dates. Format: BCP 47 (e.g., 'en-US')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "timezone",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString4",
      "type": "string",
      "description": "The User's time zone in the IANA Time Zone database format (e.g., 'America/Los_Angeles')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "profileUrl",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString5",
      "type": "reference",
      "referenceTypes": ["external"],
      "description": "A fully qualified URL pointing to a page representing the User's online profile",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },

    {
      "_comment": "=== Enterprise User Extension: urn:ietf:params:scim:schemas:extension:enterprise:2.0:User ===",
      "_comment2": "These are standard Enterprise User extension attributes"
    },
    {
      "scimPath": "employeeNumber",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString1",
      "type": "string",
      "description": "Numeric or alphanumeric identifier assigned to a person, typically based on order of hire",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "costCenter",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString2",
      "type": "string",
      "description": "Identifies the name of a cost center",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "organization",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString3",
      "type": "string",
      "description": "Identifies the name of an organization",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "division",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString4",
      "type": "string",
      "description": "Identifies the name of a division",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "department",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString5",
      "type": "string",
      "description": "Identifies the name of a department",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    }
  ]
}