{
  "$schema": "./scim-attribute-mappings.schema.json",
  "_comment": "SCIM Custom Attribute Mappings - Map PingIDM custom attributes to standard SCIM attributes",
  "_documentation": "https://docs.pingidentity.com/scim-server/custom-mappings",

  "customAttributeMappings": [
    {
      "_comment": "=== Core User Schema: urn:ietf:params:scim:schemas:core:2.0:User ===",
      "_comment2": "These attributes are part of the base SCIM User schema but not in PingIDM OOTB"
    },
    {
      "scimPath": "name.middleName",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString1",
      "type": "string",
      "description": "The middle name(s) of the User",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "title",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString2",
      "type": "string",
      "description": "The user's title, such as Vice President",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "preferredLanguage",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frUnindexedString1",
      "type": "string",
      "description": "Indicates the User's preferred written or spoken language. Format: BCP 47 (e.g., 'en-US')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "locale",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString3",
      "type": "string",
      "description": "Used to indicate the User's default location for purposes of localizing items such as currency and dates. Format: BCP 47 (e.g., 'en-US')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "timezone",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString4",
      "type": "string",
      "description": "The User's time zone in the IANA Time Zone database format (e.g., 'America/Los_Angeles')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "profileUrl",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString5",
      "type": "reference",
      "referenceTypes": ["external"],
      "description": "A fully qualified URL pointing to a page representing the User's online profile",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "_comment": "=== Additional Core User Schema Attributes ===",
      "_comment2": "These attributes fix the 'undeclared attributes' and 'missing data' errors"
    },
    {
      "scimPath": "addresses",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frUnindexedString6",
      "type": "complex",
      "description": "Physical mailing addresses for this User. Stored as JSON string in PingIDM.",
      "multiValued": true,
      "required": false,
      "mutability": "readWrite",
      "returned": "default",
      "subAttributes": [
        {
          "name": "formatted",
          "type": "string",
          "description": "The full mailing address, formatted for display",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "streetAddress",
          "type": "string",
          "description": "The full street address component",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "locality",
          "type": "string",
          "description": "The city or locality component",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "region",
          "type": "string",
          "description": "The state or region component",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "postalCode",
          "type": "string",
          "description": "The zip code or postal code component",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "country",
          "type": "string",
          "description": "The country name component",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "type",
          "type": "string",
          "description": "A label indicating the function of the address (e.g., 'work', 'home')",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default",
          "canonicalValues": ["work", "home", "other"]
        },
        {
          "name": "primary",
          "type": "boolean",
          "description": "Indicates if this is the primary address",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        }
      ]
    },
    {
      "scimPath": "nickName",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frUnindexedString7",
      "type": "string",
      "description": "The casual way to address the user in real life",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "userType",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frUnindexedString8",
      "type": "string",
      "description": "Used to identify the relationship between the organization and the user (e.g., 'Employee', 'Contractor')",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "roles",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frUnindexedString9",
      "type": "complex",
      "description": "A list of roles for the User. Stored as JSON string in PingIDM.",
      "multiValued": true,
      "required": false,
      "mutability": "readWrite",
      "returned": "default",
      "subAttributes": [
        {
          "name": "value",
          "type": "string",
          "description": "The value of a role",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "display",
          "type": "string",
          "description": "A human-readable name for the role",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "type",
          "type": "string",
          "description": "A label indicating the type of role",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "primary",
          "type": "boolean",
          "description": "Indicates if this is the primary role",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        }
      ]
    },

    {
      "_comment": "=== Enterprise User Extension: urn:ietf:params:scim:schemas:extension:enterprise:2.0:User ===",
      "_comment2": "These are standard Enterprise User extension attributes"
    },
    {
      "scimPath": "employeeNumber",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frIndexedString6",
      "type": "string",
      "description": "Numeric or alphanumeric identifier assigned to a person, typically based on order of hire",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "costCenter",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString2",
      "type": "string",
      "description": "Identifies the name of a cost center",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "organization",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString3",
      "type": "string",
      "description": "Identifies the name of an organization",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "division",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString4",
      "type": "string",
      "description": "Identifies the name of a division",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "scimPath": "department",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString5",
      "type": "string",
      "description": "Identifies the name of a department",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default"
    },
    {
      "_comment": "=== Manager attribute (complex type per RFC 7643 Section 4.3) ===",
      "scimPath": "manager",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "manager",
      "type": "complex",
      "description": "The user's manager. A complex type with subattributes including value, $ref, and displayName",
      "multiValued": false,
      "required": false,
      "mutability": "readWrite",
      "returned": "default",
      "subAttributes": [
        {
          "name": "value",
          "type": "string",
          "description": "The ID of the user's manager",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default"
        },
        {
          "name": "$ref",
          "type": "reference",
          "description": "The URI of the corresponding User resource",
          "multiValued": false,
          "required": false,
          "mutability": "readWrite",
          "returned": "default",
          "referenceTypes": ["User"]
        },
        {
          "name": "displayName",
          "type": "string",
          "description": "The displayName of the user's manager",
          "multiValued": false,
          "required": false,
          "mutability": "readOnly",
          "returned": "default"
        }
      ]
    }
  ]
}