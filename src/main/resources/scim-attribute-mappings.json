{
  "$schema": "./scim-attribute-mappings.schema.json",
  "_comment": "SCIM Custom Attribute Mappings - Map PingIDM custom attributes to standard SCIM attributes",
  "_documentation": "https://docs.pingidentity.com/scim-server/custom-mappings",

  "customAttributeMappings": [
    {
      "_comment": "=== Core User Schema Attributes ==="
    },
    {
      "scimPath": "name.middleName",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString1",
      "type": "string",
      "description": "The middle name(s) of the User"
    },
    {
      "scimPath": "title",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString2",
      "type": "string",
      "description": "The user's title"
    },
    {
      "scimPath": "preferredLanguage",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frUnindexedString1",
      "type": "string",
      "description": "User's preferred language"
    },
    {
      "scimPath": "locale",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString3",
      "type": "string",
      "description": "User's default location"
    },
    {
      "scimPath": "timezone",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString4",
      "type": "string",
      "description": "User's time zone"
    },
    {
      "scimPath": "profileUrl",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString5",
      "type": "reference",
      "referenceTypes": ["external"],
      "description": "URL to online profile"
    },
    {
      "_comment": "=== Mapped Complex/Core Attributes (Previously Hardcoded) ==="
    },
    {
      "scimPath": "addresses",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString7",
      "type": "complex",
      "multiValued": true,
      "description": "Physical mailing addresses (Serialized JSON)"
    },
    {
      "scimPath": "nickName",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString8",
      "type": "string",
      "description": "Casual name of the User"
    },
    {
      "scimPath": "userType",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString9",
      "type": "string",
      "description": "Organization-to-user relationship"
    },
    {
      "scimPath": "roles",
      "scimSchema": "urn:ietf:params:scim:schemas:core:2.0:User",
      "pingIdmAttribute": "frIndexedString10",
      "type": "complex",
      "multiValued": true,
      "description": "List of roles (Serialized JSON)"
    },
    {
      "_comment": "=== Enterprise User Extension Attributes ==="
    },
    {
      "scimPath": "employeeNumber",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frIndexedString6",
      "type": "string",
      "description": "Numeric or alphanumeric identifier"
    },
    {
      "scimPath": "costCenter",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString2",
      "type": "string",
      "description": "Name of a cost center"
    },
    {
      "scimPath": "organization",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString3",
      "type": "string",
      "description": "Name of an organization"
    },
    {
      "scimPath": "division",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString4",
      "type": "string",
      "description": "Name of a division"
    },
    {
      "scimPath": "department",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "frUnindexedString5",
      "type": "string",
      "description": "Name of a department"
    },
    {
      "scimPath": "manager",
      "scimSchema": "urn:ietf:params:scim:schemas:extension:enterprise:2.0:User",
      "pingIdmAttribute": "manager",
      "type": "complex",
      "description": "The user's manager",
      "subAttributes": [
        {
          "name": "value",
          "type": "string"
        },
        {
          "name": "$ref",
          "type": "reference"
        },
        {
          "name": "displayName",
          "type": "string",
          "mutability": "readOnly"
        }
      ]
    }
  ]
}